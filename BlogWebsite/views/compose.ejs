<%- include('partials/header') %>

<h1 class="my-4">Compose</h1>
<form action="/" method="post">
    <div class="form-group my-1">
        <label class="fw-bolder mb-2" for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" id="title" autocomplete="off" autofocus>
    </div>
    <div class="form-group my-2">
        <label class="fw-bolder mb-2" for="post">Post</label>
        <textarea class="form-control" name="postBody" id="post" cols="30" rows="10" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>


<%- include('partials/footer') %>